<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_basic_intent_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="basic_intent_service" />

        <Button
            android:id="@+id/bt_start_not_sticky_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start_not_sticky_service" />

        <Button
            android:id="@+id/bt_start_sticky_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start_sticky_service" />

        <Button
            android:id="@+id/bt_start_redelivery_intent_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start_redelivery_intent_service" />

    </LinearLayout>
</ScrollView>